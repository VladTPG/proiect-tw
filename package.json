{
  "name": "task-management-app",
  "version": "1.0.0",
  "description": "Task Management Application",
  "scripts": {
    "install-all": "cd front && npm install && cd ../back && npm install",
    "build": "cd front && npm run build",
    "start-front": "cd front && npm run dev",
    "start-back": "cd back && npm run dev",
    "dev": "concurrently \"npm run start-back\" \"npm run start-front\"",
    "start": "concurrently \"cd back && npm run start\" \"cd front && npm run start\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
